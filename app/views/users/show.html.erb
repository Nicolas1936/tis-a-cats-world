<% if @user.is_org? %>
  <div class="org-banner"></i>
    <h3><%=  @user.org_name%></h3>
    <p><%=  @user.description%></p>
  </div>

  <div class="container">
    <% if !@user.photo.key.nil? %>
      <%# scale, fit, fill, limit, pad, crop. %>
      <p><%= cl_image_tag @user.photo.key, height: 300, width: 400, crop: :fit %></p>
    <% end %>
    <h3><%= @user.org_name %></h3>
    <% if !current_user.is_org %>
      <%= link_to "Contact the Organization", connect_chatrooms_user_path, data: {turbo_method: :post} %>
    <% else %>
      <%# <p>You cannot contact the organization</p> %>
      <%= link_to "Edit", edit_user_path(@user), class: "btn purple-button", style: "width: 100px;" %>
    <% end %>
    <p><b>Address : </b><%=  @user.address%></p>
    <div style="width: 80%; height: 200px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

    <div class="cards mt-3">
      <% @cats.each do |cat| %>
        <%= render "cats/cat", cat: cat %>
      <% end %>
    </div>
  </div>

<% else %>

  <div class="container">
    <%= link_to "Add a story", new_user_review_path(@user) %>
    <p><strong>Testimonials</strong></p>
    <ul class="list-group">
      <% @user.reviews.each do |review| %>
        <li class="list-group-item">
          <%= review.content %>
          <%= link_to "Delete",
            review_path(review),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
          %>
        </li>
      <% end %>
    </ul>

    <hr>

    <p><b>First name :</b> <%= @user.first_name %></p>
    <p><b>Last name : </b><%= @user.last_name %></p>
    <p><b>Address : </b><%= @user.address %></p>
    <% if !@user.photo.key.nil? %>
      <p><%= cl_image_tag @user.photo.key, height: 300, width: 400, crop: :thumb, gravity: :face %></p>
    <% else %>
      <p>No Picture!</p>
    <% end %>
    <%= link_to "edit", edit_user_path(@user), class: "btn purple-button", style: "width: 100px;" %>
  </div>
<% end %>
