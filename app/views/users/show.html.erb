<% if @user.is_org? %>
  <div class="org-banner">
  <i class="fa-solid fa-paw homepage-banner-logo"></i>
  <h3><%=  @user.org_name%></h3>
  <p><%=  @user.description%></p>
</div>
<% end %>
<div class="container">
  <% if !@user.photo.key.nil? %>
    <p><%= cl_image_tag @user.photo.key, height: 300, width: 400, crop: :fill %></p>
  <% end %>
  <% if @user.is_org? %>
    <h3><%= @user.org_name %></h3>
    <% if !current_user.is_org %>
      <%= link_to "Contact the Organization", connect_chatrooms_user_path, data: {turbo_method: :post} %>
    <% else %>
      <p>You cannot contact the organization</p>
    <% end %>
  <% end %>
</div>
<div class="container">
  <div class="cards">
    <% @cats.each do |cat| %>
      <%= render "cats/cat", cat: cat %>
    <% end %>
  </div>
</div>

<div class="container">
<%= link_to "Add a story", new_user_review_path(@user) %>
  <p><strong>Testimonials</strong></p>
  <ul class="list-group">
    <% @user.reviews.each do |review| %>
      <li class="list-group-item">
        <%= review.content %>
        <%= link_to "Delete",
          review_path(review),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
         %>
      </li>
    <% end %>
  </ul>
  <br>
</div>
