<div id="message-<%= message.id %>">
  <small>
    <% if message.user.is_org %>
      <strong><%= message.user.org_name %> (Organization)</strong>
    <% else %>
      <strong><%= message.user.first_name %></strong>
    <% end %>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p><%= message.content %></p>
</div>
