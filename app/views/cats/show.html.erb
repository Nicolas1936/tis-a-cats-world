
  <div class="wrapper">
    <div class="cat-page-container">
      <div class="cat-show-page">
        <% if user_signed_in? && (current_user == @cat.user) %>
          <%= link_to "edit my cat", edit_cat_path(@cat), class: "purple-button" %>
          <%= link_to "delete my cat", cat_path(@cat), class: "purple-button", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        <% end %>

        <div class="cat-photo-carousel">



        <% if user_signed_in? && @cat.user != current_user %>
          <%= render "shared/favorite", cat: @cat %>
        <% end %>

        <% if @cat.is_adopted %>
          <div style = "position: relative;">
            <div class="text-end">
              <div style = "position: absolute;
                            z-index: 1;
                            right: 1px;
                            background-color: #BB2684;
                            color: white;
                            padding: 5px;
                            border-radius: 5px;
                            top: 10px;">
              Is adopted!
              </div>
            </div>
          </div>
        <% end %>
          <div id="cat-carousel" class="carousel slide" data-bs-interval="15000" data-bs-ride="carousel">
            <div class="carousel-indicators">
              <% @cat.photos.each_with_index do |photo, index| %>
                <button type="button" data-bs-target="#cat-carousel" data-bs-slide-to="<%= index %>" aria-label="Slide <%= index + 1 %>" class="<%= "active" if index == 0 %>"></button>
              <% end %>
            </div>

            <div class="carousel-inner">
              <% @cat.photos.each_with_index do |photo, index| %>
                <div class="carousel-item <%= "active" if index == 0 %>">
                  <%= cl_image_tag photo.key %>
                </div>
              <% end %>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#cat-carousel" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#cat-carousel" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>

        <% if user_signed_in? && (current_user == @cat.user) %>
          <% cat_adopted = @cat.is_adopted ? 'Mark as not adopted' : 'Mark as adopted' %>
          <%= link_to cat_adopted, change_is_adopted_cat_path(@cat), class: "purple-button" %>
        <% end %>

        <div class="cat-info">

          <div class="left-info">
            <div class="cat-details">
              <h2><%= @cat.name %></h2>
              <p><%= @cat.breed %>, <%= @cat.gender %></p>

              <% if @cat.is_adopted? %>
                <strong><h6>ADOPTED</h6></strong>
              <% end %>

              <hr>
              <h5>Health</h4>
              <p>Estimated age: <%= @cat.estimated_age %></p>
              <p>Vaccinated: <%= @cat.is_vaccinated? ? "Yes" : "No" %></p>
              <p>Neutered: <%= @cat.is_neutered? ? "Yes" : "No"  %></p>
              <hr>
              <p><%= @cat.description %></p>
            </div>
          </div>

          <div class="right-info">
            <div class="adoption-info">
              <p>Are you interested in <strong><%= @cat.name %>?</strong></p>
              <div class="adoption-info-buttons">
                <p>message <%= @cat.user.org_name %> </p>
                <p>I want to foster</p>
              </div>
            </div>

            <div class="org-info">
              <%= link_to user_path(@cat.user) do %>
                <h2><%= @cat.user.org_name %></h2>
                <hr>
                <div class="cat-show-org-details">
                  <i class="fa-solid fa-location-dot"></i>
                  <%= @cat.user.address %>
                </div>

                <div class="cat-show-org-details">
                  <i class="fa-solid fa-envelope"></i>
                  <%= @cat.user.email %>
                </div>
              <% end %>
            </div>
          </div>
        </div>


      <%= link_to "< back", 'javascript:history.back()', class: "back-button" %>
      </div>
    </div>
  </div>
